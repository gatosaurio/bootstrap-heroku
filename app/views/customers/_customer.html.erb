<table class="table table-striped table-bordered">
	<tr>
		<th>Phone</th>
		<th>Name</th>
		<th>Street</th>
		<th>Number</th>
		<th>Departament</th>
		<th></th>
	</tr>

	<% @customers.each do | customer |%>
	<tr>
		<td><%= customer.phone %></td>
		<td><%= customer.name.capitalize %></td>
		<td><%= customer.street.capitalize %></td>
		<td><%= customer.number %></td>
		<td><%= customer.department %></td>

		<td><%= link_to "View", customer_path(customer), class: 'btn btn-small boton' %>
		<%= link_to "Edit", edit_customer_path(customer), class: 'btn btn-small boton'%>
		<%= link_to 'Delete', customer, :method => 'delete', class: 'btn btn-danger btn-small boton', data: { confirm: 'Estas seguro?'}%>
		<%= link_to "Add Order", new_order_path, class: 'btn btn-small boton'%></td>
		
	</tr>
	<% end %>
</table>

<% if action_name == 'search' %>
	<p><%= link_to "Back", customers_path, class: 'btn'%></p>
<% end %>