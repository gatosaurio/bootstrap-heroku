
<div class="offset4 span4 hero-unit">
	<h2>Sign in</h2>

	<%= form_for(resource, :as => resource_name, class: 'form-horizontal', :url => session_path(resource_name)) do |f| %>
	  <div class="control-group">
		  <div><%= f.label :username %>
		  <%= f.text_field :username, :autofocus => true %></div>
	  </div>
	  <div><%= f.label :password %>
	  <%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in", class: 'btn btn-large btn-success'%></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
