<%= form_for (@product) do |f|%>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :price %>
		<%= f.number_field :price %>
	</p>


	<% if action_name == 'edit'%>
		<p>
			<%= f.submit "Edit Product", class: 'btn btn-success' %>
		</p>
	<% else %> 
		<%= f.submit "Add Product", class: 'btn btn-success' %>
	<% end %>

	<%= link_to "Back", products_path, class: 'btn' %>
<% end %>

