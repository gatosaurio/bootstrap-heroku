<table class="table table-striped table-bordered">

	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Actions</th>
	</tr>

<% @products.each do |product| %>
	<tr>
		<td><%= product.name %></td>
		<td><%= product.price %></td>
		<td><%= link_to "View", product_path(product), class: 'btn btn-small boton' %>
		<%= link_to "Edit", edit_product_path(product), class: 'btn btn-small boton' %>
		<%= link_to "Delete", product, class: 'btn btn-small btn-danger boton', method: :delete, data: { confirm: 'Are you sure?'}%></td>
	</tr>
	<% end %>
</table>

